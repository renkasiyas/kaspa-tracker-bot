# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Kaspa Node Configuration (optional - defaults to mainnet.kasanova.io)
# KASPA_WS_URL=ws://mainnet.kasanova.io:18110

# Database Configuration (optional - defaults to kaspa_tracker.db)
# DATABASE_PATH=kaspa_tracker.db

# User Limits (optional)
# MAX_ADDRESSES_PER_USER=20

# Admin Configuration (comma-separated Telegram user IDs)
# ADMIN_IDS=123456789,987654321

# Notification Settings (optional)
# MIN_TRANSACTION_AMOUNT=0  # minimum KAS amount to trigger notification
# NOTIFY_ON_ALL_TRANSACTIONS=true

# Logging Configuration (optional)
# LOG_LEVEL=INFO